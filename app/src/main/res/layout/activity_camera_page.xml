<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D3D3D3"
    tools:context="com.example.manubhangu.faceapp.cameraPage">

    <Button
        android:text="Take picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/rbutton"
        android:onClick="dispatchTakePictureIntent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imgPic2" />

    <Button
        android:text="Use Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/useimagebtn2"
        android:background="@drawable/rbutton"
        android:onClick="sendImage"/>

    <ImageView
        android:layout_width="200pt"
        android:layout_height="240pt"
        android:id="@+id/imgPic2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
