<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pic_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D3D3D3"
    tools:context="com.example.manubhangu.faceapp.picLibrary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgPicture"
        android:layout_above="@+id/opengallerybtn" />

    <Button
        android:text="Open Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opengallerybtn"
        android:background="@drawable/rbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:onClick="onOpenGalleryClick" />

    <Button
        android:text="Use Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useimagebtn"
        android:background="@drawable/rbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:onClick="onUseImageClick" />
</RelativeLayout>
